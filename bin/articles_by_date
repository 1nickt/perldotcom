#!/usr/bin/perl
use v5.32;

use Data::Dumper;
use FindBin;
use lib $FindBin::Bin;
use open qw(:std :utf8);

require 'articles_utils.pl';

say
	join "\n",
	map  { join '  ', $_->[1]{date}, $_->[0], $_->[1]{title} }
	sort { $b->[1]{date} cmp $a->[1]{date} }
	map  { [ $_, get_article_meta($_) ] }
	get_article_files()->@*
